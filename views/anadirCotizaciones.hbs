<div class="d-flex justify-content-center text-center">

    <h1>Añadir cotizacion</h1>

    <form onsubmit="registrar(event)">

        <div>
            <div style="padding-top: 5%;" class="d-inline-block ">
                <h5 style="font-weight: bold;">Datos del la cotizacion</h5>
                <div id="margenForm2">
                    <div class="col">
                        <label for="name">Id cotizacion</label>
                        <div>
                            <input id="idCotizacion"style="border-radius: 40px" placeholder="1" type="text" value="1"class="form-control"
                                disabled>
                        </div>
                    </div>
                    <div class="col">
                        <label for="name">Fecha emision</label>
                        <div>
                            <input id="fecha" style="border-radius: 40px" type="date" class="form-control">
                        </div>
                    </div>
                    <div class="col">
                        <label for="exampleFormControlSelect1">Vehiculo</label>
                        <select id="vehiculo"style="border-radius: 40px" class="form-select" id="exampleFormControlSelect1">
                            <option></option>
                            <option>QCE33G</option>
                            <option>AMG20F</option>
                            <option>+Añadir Vehiculo</option>
                        </select>
                    </div>

                    <div class="col">
                      <label for="name">Descuento</label>
                        <div>
                            <input id="descuento" style="border-radius: 40px" type="number" class="form-control">
                        </div>
                    </div>

                      <div class="col">
                      <label for="name">Mano de obra</label>
                        <div>
                            <input id="manoDeObra" style="border-radius: 40px" type="number" class="form-control">
                        </div>
                    </div>



    



                </div>
                <h5 style="font-weight: bold; margin-top:4%; margin-bottom: 3%">Agregar insumos a la cotizacion</h5>

                <div class="form-group" id="margenForm3">
                    <div style="display: flex; justify-content: space-between; padding: 2%;padding-left: 10%">
                        <div class="col">
                            <label for="exampleFormControlSelect1">Seleccione el producto</label>
                            <select onchange="seleccionarProducto()" id="producto"style="border-radius: 40px" class="form-select" id="exampleFormControlSelect1">
                                <optio></option>
                                <optio>Aceite</option>
                                <option>Lubricante</option>
                                <option>Baterias</option>
                                <option>Neumaticos</option>
                            </select>
                        </div>
                        <div class="col">
                            <label for="name">Total</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                </div>
                                <input id="total" style="border-radius: 40px" type="number" class="form-control" disabled >
                            </div>
                        </div>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center">
                        <div class="col">
                            <label for="name">Id producto</label>
                            <div>
                                <input id="idProducto"style="border-radius: 40px" type="number" value="1" class="form-control"
                                    disabled>
                            </div>
                        </div>
                        <div class="col">
                            <label for="name">Producto</label>
                            <div>
                                <input id="nombreProducto"style="border-radius: 40px" type="text" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="col">
                            <label for="name">Precio</label>
                            <div>
                                <input id="precio"style="border-radius: 40px" type="number" class="form-control" >
                            </div>
                        </div>
                        <div class="col">
                            <label for="name">Cantidad</label>
                            <div>
                                <input onkeyup="calcular()"id="cantidad"style="border-radius: 40px" type="number" class="form-control" >
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>


        <div class="d-flex justify-content-center text-center">
            <button style="border-radius: 40px; margin-top: 3%;" type="submit" class="btn btn-primary" id="botoncito"
               ><i class="fa-solid fa-plus"></i>Registrar</button>
            <script src="js/anadirCotizaciones.js"></script>
    </form>
</div>




</div>