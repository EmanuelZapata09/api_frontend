<div class="d-flex justify-content-center text-center">

    <h1>Editar Roles</h1>

    <form id="margenForm" onsubmit="editar(event)">
        <h5 style="font-weight: bold; padding: 2%">Datos del Rol</h5>
        <div style="padding-top: 5%;" class="d-flex justify-content-center text-center align-items: center">
            <div class="form-group">
                <div class="col">
                    <label for="name">Id rol:</label>
                    <div class="input-group">
                        <input id="idRol" style="border-radius: 40px" type="text" class="form-control" value="1"
                            placeholder="1" disabled>
                    </div>
                </div>

                <div class="col">
                    <label for="name">Usuario:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                        </div>
                        <input id="usuario" style="border-radius: 40px" type="text" class="form-control"
                            >
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col">

                    <label for="exampleFormControlSelect1">Rol</label>
                    <select id="rol" style="border-radius: 40px" class="form-control" id="exampleFormControlSelect1">
                        <option></option>
                        <option>Empleado</option>
                        <option>Administrador</option>
                    </select>

                </div>

                <div class="col">

                    <label for="exampleFormControlSelect1">Estado</label>
                    <select id="estado" style="border-radius: 40px" class="form-control" id="exampleFormControlSelect1">
                        <option>Activo</option>
                        <option>Inactivo</option>
                    </select>
                </div>

            </div>

        </div>
        <!---PERMISOS-->
        <h5 style="font-weight: bold; padding: 2%">Gestionar Permisos</h5>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Agendamiento
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Empleados
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Vehiculos
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Ventas
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Proveedores
            </label>
        </div>
        <!--FIN PERMISOS-->



        <div class="d-flex justify-content-center text-center">
            <button style="border-radius: 40px" type="submit" class="btn btn-primary" id="botoncito"><i
                    class="fa-solid fa-pen"></i>Editar</button>
            
            <script>/
                function editar(event) {
                    event.preventDefault(); // Evitar que el formulario se envíe automáticamente
                    let idRol = document.getElementById('idRol').value;
                    let usuario = document.getElementById('usuario').value;
                    let rol = document.getElementById('rol').value;
                    let estado = document.getElementById('estado').value;

                    if (idRol == "" || usuario == "" || rol == "" || estado == "") {
                        Swal.fire('No se permiten campos vacíos');
                    } else {
            Swal.fire({
                            title: 'Estas seguro?',
                            text: "Editaras el siguiente rol",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Aceptar'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Rol editado con exito',
                                    showConfirmButton: false,
                                })
                                setTimeout(() => {
                                    window.location.replace('/roles');
                                }, 2000)

                            }
                        })
                    }
                }
            </script>
    </form>
</div>




